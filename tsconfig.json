{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": ["node_modules", "**/*.spec.ts"],

}